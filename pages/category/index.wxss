/* pages/category/index.wxss */
@import "../common/searchbar.wxss";

.content {
  display: flex;
  flex-direction: row;
  align-items: flex-start;
}

.searchbar {
  position: fixed;
  z-index: 3;
}

/*主类目  */

.category_main {
  width: 30%;
  background-color: white;
  height: 100vh;
  text-align: center;
  margin-top: 88rpx;
  padding-top: 16rpx;
  border-right: 1px solid #eee;
  display: inline-block;
  box-sizing: border-box;
}

.category_item {
  font-size: 14px;
  padding: 16rpx;
  margin: 16rpx;
}

.active {
  background-color: #333;
  color: white;
  border: 1px solid #333;
  border-radius: 32rpx;
}

/*子类目  */

.category_child {
  width: 70%;
  height: 100vh;
  display: inline-block;
  margin-top: 88rpx;
  background-color: white;
}

.hotcategory_title ,.hotbrand_title,.album_title{
  display: flex;
  justify-content: space-between;
  align-items: center;
  font-size: 14px;
  padding:24rpx 16rpx;
}

.hotcategory_more,.album_refresh {
  display: flex;
  align-items: center;
  color: #ff5454;
}

.hotcategory_more image {
  width: 10rpx;
  height: 20rpx;
  margin-left: 16rpx;
}

/*图片列表  */
.hotcategory_list{
  width: 100%;
  margin: 0 2%;
  border-bottom: 1px solid #eee;
}

.hotcategory_item,.brand_item{
  display: inline-block; 
   width: 29%;
   margin:0 2%;
   text-align: center;
}
.hotcategory_item image{
  width: 100%;
  display: block;
  height: 147rpx;
}



.brand_image{
  width: 100%;
  display: block;
  height: 147rpx;
}

.hotcategory_item text,.brand_item text{
   display: inline-block;
   margin: 16rpx;
   font-size: 12px;
   color: #333;
   margin-bottom: 24rpx;
     white-space: nowrap;
}

.with_border{
  border: 1px solid #eee;
}

/*精选专辑*/
.album_refresh{
   color: #999;
}

.album_refresh image{
  width: 30rpx;
  height: 30rpx;
  margin-left: 10rpx;
}

.album_item{
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  margin: 16rpx;
  align-items: center;
  border-bottom: 1px solid #eee;
}

.album_logo{
  width: 80rpx;
  height: 80rpx;
}

.album_detail{
  width: 70%;
  display: flex;
  flex-direction: column;
  text-align: start;
  font-size: 12px;
  justify-content: center;
}

.album_arrow{
  width: 12rpx;
  height: 22rpx;
}


.album_more{
  font-size: 12px;
  color: #666;
  text-align: center;
  display: flex;
  align-items: center;
  justify-content: center;
  margin: 24rpx;
}

.album_more image{
  width: 12rpx;
  height: 22rpx;
  margin-left: 8rpx;
}

/*二级类目  */
.with_margintop{
  margin-top: 16rpx;
}

/*品牌列表中添加的更多  */
.last_brand{
  border-width: 0;
  width: 50rpx;
  height: 50rpx;
  display: inline-block;
}