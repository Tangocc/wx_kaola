/* pages/account/index.wxss */

.head {
  width: 100%;
  height: 300rpx;
  background-image: url(/assets/images/mykaola_bg.png);
}

.head_bar {
  display: flex;
  justify-content: space-between;
}

.head_bar image {
  width: 40rpx;
  height: 40rpx;
  margin: 24rpx;
}

.hend_content {
  text-align: center;
  display: flex;
  justify-content: center;
  flex-direction: column;
  height: 212rpx;
  /* border: 1px solid #ff5454; */
  align-items: center;
}

/*标题一  */

.head_title {
  font-size: 12px;
  color: #333;
}

/*标题二  */

.head_des {
  font-size: 12px;
  color: #333;
  margin-top: 16rpx;
}

/*登录注册按钮  */

.head_login {
  width: 260rpx;
  padding: 16rpx 30rpx;
  background-color: #ff5454;
  color: white;
  border: 1px solid #ff5454;
  font-size: 14px;
  border-radius: 4rpx;
  margin-top: 16rpx;
}

/*考拉豆bar  */

.doubar {
  background: white;
  padding: 16rpx;
  /* border: 1px solid #333; */
}

.doubar_item {
  width: 25%;
  display: inline-block;
  text-align: center;
}

.doubar_item text {
  display: block;
  font-size: 12px;
}

.doubar_item text:last-child {
  margin-top: 16rpx;
}

/*订单栏  */

.orderbar {
  background-color: white;
  margin-top: 16rpx;
}

.orderbar_head {
  display: flex;
  width: 100%;
  padding: 16rpx;
  justify-content: space-between;
  align-items: center;
  border-bottom: 1px solid #eee;
}

.orderbar_title, .orderbar_des, .orderbar_des view {
  display: inline-block;
  font-size: 14px;
}

.orderbar_title {
  color: #333;
}

.orderbar_des {
  color: #999;
}

.orderbar_des {
  display: flex;
  align-items: center;
  padding-right: 16rpx;
}

.orderbar_des image {
  width: 12rpx;
  height: 22rpx;
  margin: 16rpx;
}

/*订单栏内容  */

.orderbar_content {
  padding: 16rpx 0rpx;
  box-sizing: border-box;
  border-bottom: 1px solid #eee;
}

.orderbar_item {
  width: 20%;
  display: inline-block;
  text-align: center;
}

.orderbar_item image {
  width: 40rpx;
  height: 40rpx;
  display: inline-block;
}

.orderbar_item view {
  font-size: 12px;
  margin-top: 4rpx;
  color: #333;
}

/*设置栏  */

.settingbar {
  display: flex;
  justify-content: space-between;
  align-items: center;
  background: white;
  border-bottom: 1px solid #eee;
  padding:32rpx 16rpx;
  font-size: 14px;
}

.settingbar_title, .settingbar_des {
  display: flex;
  align-items: center;
}

.settingbar_title view, .settingbar_des view {
  display: inline-block;
}

.settingbar_title image {
  width: 40rpx;
  height: 40rpx;
  display: inline-block;
  margin-right: 16rpx;
}

.settingbar_title view {
  color: #333;
}

.settingbar_des image {
  width: 12rpx;
  height: 22rpx;
  margin-left: 16rpx;
}

.settingbar_des view {
  color: #999;
}

.line{
  margin-top: 16rpx;
}
